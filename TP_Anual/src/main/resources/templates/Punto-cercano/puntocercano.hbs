<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mapa de Puntos Estratégicos</title>

    <!-- CSS de Bootstrap y estilos personalizados -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../css/estilos.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="../../css/lib/animate/animate.min.css" rel="stylesheet">
    <link href="../../css/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="../../css/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Hoja de estilo para Leaflet (mapas) -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />

    <style>
        #map {
            height: 500px;
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>
<body>
<!-- Incluir el header desde tu archivo de plantillas -->
{{> templates/partials/headerColaborador rol=rol id=id}}
{{> templates/partials/tipografia}}

<main>
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h5 class="section-title ff-secondary text-center text-primary fw-normal">Puntos Estratégicos</h5>
                <h1 class="mb-5">Mapa de Puntos Estratégicos Cercanos</h1>
            </div>
        <div id="map" class="col-md-12 wow fadeInUp" data-wow-delay="0.4s"></div>
        <form method="POST" action="/registro/heladera">
            <div class="row g-3 pt-5">

                <!-- Latitud -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <label for="latitudOption" class="form-label form-control-sm text-muted">Latitud:</label>
                        <p id="latitudOption" class="form-control">Selecciona un punto en el mapa</p>
                    </div>
                </div>

                <!-- Longitud -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <label for="longitudOption" class="form-label form-control-sm text-muted">Longitud:</label>
                        <p id="longitudOption" class="form-control">Selecciona un punto en el mapa</p>
                    </div>
                </div>

                <!-- Calle -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <label for="calleOption" class="form-label form-control-sm text-muted">Calle:</label>
                        <p id="calleOption" class="form-control">Selecciona un punto en el mapa</p>
                    </div>
                </div>

                <!-- Número -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <label for="numeroOption" class="form-label form-control-sm text-muted ">Número:</label>
                        <p id="numeroOption" class="form-control">Selecciona un punto en el mapa</p>
                    </div>
                </div>

                <!-- Localidad -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <label for="localidadOption" class="form-label form-control-sm text-muted">Localidad:</label>
                        <p id="localidadOption" class="form-control ">Selecciona un punto en el mapa</p>
                    </div>
                </div>


                <!-- Campos ocultos para enviar datos -->
                <input type="hidden" id="latitud" name="latitud">
                <input type="hidden" id="longitud" name="longitud">
                <input type="hidden" id="calle" name="calle">
                <input type="hidden" id="numero" name="numero">
                <input type="hidden" id="localidad" name="localidad">

                <!-- Estado -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-control" id="estado" name="estado" required>
                            <option value="" disabled selected>Seleccionar Estado</option>
                            <option value="disponible">DISPONIBLE</option>
                            <option value="no-disponible">NO DISPONIBLE</option>
                        </select>
                        <label for="estado">Estado Actual</label>
                    </div>
                </div>

                <!-- Temperatura Máxima -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="number" class="form-control" id="temperaturaMax" name="temperaturaMax" placeholder="Temperatura Máxima" step="0.1" required>
                        <label for="temperaturaMax">Temperatura Máxima</label>
                    </div>
                </div>

                <!-- Temperatura Mínima -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="number" class="form-control" id="temperaturaMin" name="temperaturaMin" placeholder="Temperatura Mínima" step="0.1" required>
                        <label for="temperaturaMin">Temperatura Mínima</label>
                    </div>
                </div>

                <!-- Capacidad -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="number" class="form-control" id="capacidad" name="capacidad" placeholder="Capacidad heladera" step="0.1" required>
                        <label for="capacidad">Capacidad heladera</label>
                    </div>
                </div>

                <!-- Botón de envío -->
                <div class="col-12">
                    <button class="btn btn-primary w-100 py-3" type="submit">Registrar Heladera</button>
                </div>
            </div>
        </form>
    </div>
</div>



</main>

<!-- Footer desde tu archivo de plantillas -->
{{> templates/main/footer}}
{{> templates/partials/botonBack}}

<!-- Scripts necesarios -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

<!-- Scripts de tu web -->
<script src="../../css/lib/wow/wow.min.js"></script>
<script src="../../css/lib/easing/easing.min.js"></script>
<script src="../../css/lib/waypoints/waypoints.min.js"></script>
<script src="../../css/lib/counterup/counterup.min.js"></script>
<script src="../../css/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="../../css/lib/tempusdominus/js/moment.min.js"></script>
<script src="../../css/lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="../../css/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<script src="../../js/scripts-header.js"></script>
<script src="../../js/main.js"></script>

<!-- Script de Leaflet para cargar el mapa -->
<script>
    // Crear el mapa centrado en Buenos Aires
    var map = L.map('map').setView([-34.6037, -58.3816], 13);

    // Cargar los tiles de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Puntos estratégicos recibidos desde el backend
    var puntos = [
        {{#each puntos}}
            { latitud: {{this.latitud}}, longitud: {{this.longitud}} },
        {{/each}}
    ];

    // Colocar marcadores en el mapa
    puntos.forEach(function(punto) {
        var lat = punto.latitud;
        var lng = punto.longitud;
        L.marker([lat, lng])
                .addTo(map)
                .bindPopup('Punto estratégico en [' + lat + ', ' + lng + ']');
    });

    map.on('click', function (e) {
        var lat = e.latlng.lat;
        var lng = e.latlng.lng;

        // Actualizar los textos visibles para latitud y longitud
        document.getElementById('latitudOption').textContent = `Latitud seleccionada: ${lat.toFixed(6)}`;
        document.getElementById('longitudOption').textContent = `Longitud seleccionada: ${lng.toFixed(6)}`;

        // Actualizar los campos ocultos
        document.getElementById('latitud').value = lat.toFixed(6);
        document.getElementById('longitud').value = lng.toFixed(6);

        // Llamar a la API de Nominatim para obtener más detalles
        var url = `https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lng}`;

        fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.address) {
                        var calle = data.address.road || "No disponible";
                        var numero = data.address.house_number || "No disponible";
                        var localidad = data.address.city || data.address.town || data.address.village || "No disponible";

                        // Actualizar textos visibles
                        document.getElementById('calleOption').textContent = `Calle seleccionada: ${calle}`;
                        document.getElementById('numeroOption').textContent = `Número seleccionado: ${numero}`;
                        document.getElementById('localidadOption').textContent = `Localidad seleccionada: ${localidad}`;

                        // Actualizar campos ocultos
                        document.getElementById('calle').value = calle;
                        document.getElementById('numero').value = numero;
                        document.getElementById('localidad').value = localidad;
                    } else {
                        document.getElementById('calleOption').textContent = "Calle seleccionada: No disponible";
                        document.getElementById('numeroOption').textContent = "Número seleccionado: No disponible";
                        document.getElementById('localidadOption').textContent = "Localidad seleccionada: No disponible";

                        document.getElementById('calle').value = "No disponible";
                        document.getElementById('numero').value = "No disponible";
                        document.getElementById('localidad').value = "No disponible";
                    }
                })
                .catch(error => {
                    console.error("Error al obtener la información de la calle:", error);
                    document.getElementById('calleOption').textContent = "Error al obtener datos de ubicación";
                    document.getElementById('numeroOption').textContent = "Número seleccionado: Error";
                    document.getElementById('localidadOption').textContent = "Localidad seleccionada: Error";

                    document.getElementById('calle').value = "Error";
                    document.getElementById('numero').value = "Error";
                    document.getElementById('localidad').value = "Error";
                });
    });


</script>

</body>
</html>
