<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mapa de Puntos Estratégicos</title>

    <!-- CSS de Bootstrap y estilos personalizados -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../css/estilos.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="../../css/lib/animate/animate.min.css" rel="stylesheet">
    <link href="../../css/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="../../css/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Hoja de estilo para Leaflet (mapas) -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />

    <style>
        #map {
            height: 500px;
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>
<body>
<!-- Incluir el header desde tu archivo de plantillas -->
{{> templates/partials/headerColaborador esHumano = esHumano id=id}}

<!-- Contenido principal -->
<main>
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h5 class="section-title ff-secondary text-center text-primary fw-normal">Puntos Estratégicos</h5>
                <h1 class="mb-5">Mapa de Puntos Estratégicos Cercanos</h1>
            </div>

            <!-- Mapa para mostrar los puntos estratégicos -->
            <div class="row g-4">
                <div id="map" class="col-md-12 wow fadeInUp" data-wow-delay="0.4s"></div>
            </div>
        </div>
    </div>
</main>

<!-- Footer desde tu archivo de plantillas -->
{{> templates/main/footer}}

<!-- Scripts necesarios -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

<!-- Scripts de tu web -->
<script src="../../css/lib/wow/wow.min.js"></script>
<script src="../../css/lib/easing/easing.min.js"></script>
<script src="../../css/lib/waypoints/waypoints.min.js"></script>
<script src="../../css/lib/counterup/counterup.min.js"></script>
<script src="../../css/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="../../css/lib/tempusdominus/js/moment.min.js"></script>
<script src="../../css/lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="../../css/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<script src="../../js/scripts-header.js"></script>
<script src="../../js/main.js"></script>

<!-- Script de Leaflet para cargar el mapa -->
<!-- Código relevante actualizado dentro del script -->
<!-- Código relevante actualizado dentro del script -->
<script>
    // Inicializa el mapa centrado en Buenos Aires
    var map = L.map('map').setView([-34.6037, -58.3816], 12);

    // Añadir capa de mapa de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 18,
    }).addTo(map);

    // Definir un array de puntos con las coordenadas de las heladeras
    var puntos = [
        {{#each heladeras}}
            {
                id: {{this.id}},
                latitud: {{this.coordenadas.latitud}},
                longitud: {{this.coordenadas.longitud}},
                direccion: "{{this.direccion.calle}} {{this.direccion.numero}}",
                capacidad: {{this.capacidadDeViandas}},
                temperatura: {{this.temperaturaActual}}
            },
        {{/each}}
    ];

    // Colocar marcadores en el mapa
    puntos.forEach(function(punto) {
        var lat = parseFloat(punto.latitud);
        var lng = parseFloat(punto.longitud);

        // Verifica que los puntos tengan coordenadas válidas antes de añadir el marcador
        if (!isNaN(lat) && !isNaN(lng)) {
            var marker = L.marker([lat, lng]).addTo(map);

            // Añadir popup con detalles y enlace a la página de la heladera
            marker.bindPopup(`<b>ID: ${punto.id}</b><br>Dirección: ${punto.longitud}<br>Capacidad: ${punto.capacidad} viandas<br>Temperatura: ${punto.temperatura}°C<br><a href="/heladeras/${punto.id}">Ver Detalle</a>`);

            // Redirigir al hacer click en el marcador
            marker.on('click', function() {
                window.location.href = "/heladeras/" + punto.id;
            });
        } else {
            console.error("Coordenadas inválidas para el punto ID: " + punto.id);
        }
    });
</script>

</body>
</html>
