    };

    // Función que actualiza las coordenadas según la localidad seleccionada
    function actualizarCoordenadas() {
        const localidadSeleccionada = document.getElementById('localidad').value;
        const coordenadas = coordenadasLocalidades[localidadSeleccionada];
        if (coordenadas) {
            document.getElementById('latitud').value = coordenadas.latitud;
            document.getElementById('longitud').value = coordenadas.longitud;
        }
    }
</script>


</html>
