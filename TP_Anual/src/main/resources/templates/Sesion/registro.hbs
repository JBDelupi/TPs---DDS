<body>

{{> templates/partials/header estaSesion = estaSesion}}  <!-- Incluye el partial footer aquí -->
{{> templates/partials/tipografia}}  <!-- Incluye el partial footer aquí -->

<div class="contact_section layout_padding">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="display-3 text-dark text-center">Registro de Personas</h1>
            </div>
        </div>
        <div class="blog_section_2 mt-5">
            <div class="row justify-content-center">
                <!-- Registro Persona Humana -->
                <div class="col-lg-5 col-sm-6 mb-4 wow fadeInUp d-flex align-items-stretch" data-wow-delay="0.1s">
                    <a href="/registro/fisico" class="text-decoration-none w-100">
                        <div class="service-item rounded pt-3 text-center d-flex flex-column justify-content-center h-100">
                            <div class="p-4">
                                <i class="fa fa-3x fa-user text-primary mb-4"></i>
                                <h4 class="text-dark">Registro Persona Humana</h4>
                                <p class="text-dark">Regístrate como persona humana para recibir asistencia o participar en nuestras actividades.</p>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Registro Persona Jurídica -->
                <div class="col-lg-5 col-sm-6 mb-4 wow fadeInUp d-flex align-items-stretch" data-wow-delay="0.2s">
                    <a href="/registro/juridico" class="text-decoration-none w-100">
                        <div class="service-item rounded pt-3 text-center d-flex flex-column justify-content-center h-100">
                            <div class="p-4">
                                <i class="fa fa-3x fa-building text-primary mb-4"></i>
                                <h4 class="text-dark">Registro Persona Jurídica</h4>
                                <p class="text-dark">Registra tu organización o empresa para colaborar en nuestras iniciativas y recibir apoyo.</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{{> templates/main/footer}}
{{> templates/partials/botonBack}}
